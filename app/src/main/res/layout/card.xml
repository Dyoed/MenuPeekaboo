<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:orientation="vertical"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="3dp"
        card_view:cardBackgroundColor="@color/cardview_light_background"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:background="@android:color/darker_gray"
                android:padding="15dp"
                android:gravity="center"
                android:text="Events"
                android:id="@+id/interest_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/avatar"
                android:background="@android:color/darker_gray"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/interest_name"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/avatar_name"
                android:layout_alignLeft="@id/avatar"
                android:text="Christoff D."
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/avatar"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_alignLeft="@id/avatar"
                android:layout_alignRight="@id/avatar"
                android:text="San Francisco, California"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/avatar_name"/>

            <TextView
                android:text="Media Outlook 2015"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:id="@+id/post_name"
                android:layout_below="@id/interest_name"
                android:layout_toRightOf="@+id/avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/post_desc"
                android:text="The Media Outlook 2015 will present more than usual economic forecast we get different media groups. Very few forums read more...)"
                android:layout_toRightOf="@id/avatar"
                android:layout_below="@id/post_name"
                android:layout_width="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:background="@android:color/darker_gray"
                android:id="@+id/thumbnail"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@id/post_desc"
                android:layout_toRightOf="@id/avatar"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

            <Button
                android:id="@+id/comment_indicator"
                android:layout_alignLeft="@id/thumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/thumbnail"/>

            <Button
                android:layout_toRightOf="@id/comment_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/thumbnail"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/comment_indicator"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>